{
  "id": 5,
  "name": "Logic Threshold Demonstration Using GPIO",
  "type": "digital",

  "source": {
    "name": "GPIO1",
    "voltage": 3.3
  },

  "resistors": [
    { "name": "R1", "resistance": 10000.0 },
    { "name": "R2", "resistance": 10000.0 },
    { "name": "RLED", "resistance": 330.0 }
  ],

  "leds": [
    { "name": "LED1", "forward_voltage": 2.0, "max_current": 0.02 }
  ],

  "steps": [
    {
      "type": "show_component",
      "target": "GPIO1",
      "text": "Use Raspberry Pi GPIO pin as logic input (GPIO1)."
    },
    {
      "type": "show_component",
      "target": "R1",
      "text": "Add pull-up resistor R1."
    },
    {
      "type": "show_component",
      "target": "R2",
      "text": "Add pull-down resistor R2."
    },
    {
      "type": "show_component",
      "target": "LED1",
      "text": "Add indicator LED."
    },
    {
      "type": "show_component",
      "target": "RLED",
      "text": "Add LED resistor."
    },
    {
      "type": "connect",
      "from": "GPIO1.pos",
      "to": "R1.left",
      "text": "Connect GPIO to pull-up resistor."
    },
    {
      "type": "connect",
      "from": "R1.right",
      "to": "R2.left",
      "text": "Create voltage divider."
    },
    {
      "type": "connect",
      "from": "R2.right",
      "to": "GPIO1.neg",
      "text": "Complete divider to ground."
    },
    {
      "type": "connect",
      "from": "R2.left",
      "to": "RLED.left",
      "text": "Connect divider output to LED resistor."
    },
    {
      "type": "connect",
      "from": "RLED.right",
      "to": "LED1.anode",
      "text": "Drive LED."
    },
    {
      "type": "connect",
      "from": "LED1.cathode",
      "to": "GPIO1.neg",
      "text": "Complete LED return."
    },
    {
      "type": "explain",
      "text": "LED indicates whether GPIO input crosses logic threshold."
    }
  ]
}
