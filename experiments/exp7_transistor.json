{
  "id": 7,
  "name": "Transistor as a Switch - LED Control",
  "type": "transistor_switch",

  "source": {
    "name": "V1",
    "voltage": 5.0
  },

  "resistors": [
    {
      "name": "R_base",
      "resistance": 1000.0
    },
    {
      "name": "R_led",
      "resistance": 220.0
    }
  ],

  "leds": [
    {
      "name": "LED1",
      "forward_voltage": 2.0,
      "max_current": 0.02
    }
  ],

  "transistor": {
    "name": "Q1",
    "type": "NPN"
  },

  "steps": [
    {
      "type": "show_component",
      "target": "V1",
      "text": "Step 1: Place a 5V supply."
    },
    {
      "type": "show_component",
      "target": "Q1",
      "text": "Step 2: Add an NPN transistor (Q1). Its collector drives the LED."
    },
    {
      "type": "show_component",
      "target": "LED1",
      "text": "Step 3: Add LED1. It will be turned ON/OFF by the transistor."
    },
    {
      "type": "show_component",
      "target": "R_led",
      "text": "Step 4: Add a 220Ω LED resistor to prevent overcurrent."
    },
    {
      "type": "show_component",
      "target": "R_base",
      "text": "Step 5: Add a 1kΩ base resistor to limit the base current."
    },
    {
      "type": "connect",
      "from": "V1.pos",
      "to": "R_base.left",
      "text": "Feed the signal voltage to the transistor base through R_base."
    },
    {
      "type": "connect",
      "from": "R_base.right",
      "to": "Q1.base",
      "text": "Connect the base resistor to the base of the transistor."
    },
    {
      "type": "connect",
      "from": "V1.pos",
      "to": "LED1.anode",
      "text": "Connect the LED anode to +5V."
    },
    {
      "type": "connect",
      "from": "LED1.cathode",
      "to": "R_led.left",
      "text": "Connect the LED to its current-limiting resistor."
    },
    {
      "type": "connect",
      "from": "R_led.right",
      "to": "Q1.collector",
      "text": "Connect the LED resistor to the transistor collector."
    },
    {
      "type": "connect",
      "from": "Q1.emitter",
      "to": "V1.neg",
      "text": "Connect transistor emitter to ground."
    },
    {
      "type": "explain",
      "text": "When the base receives enough current, Q1 saturates and LED1 turns ON."
    },
    {
      "type": "explain",
      "text": "If base is LOW, Q1 turns OFF and LED1 goes OFF. This is how digital outputs control loads."
    }
  ]
}
