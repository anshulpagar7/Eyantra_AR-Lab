{
  "id": 2,
  "name": "Voltage Divider with Load",
  "type": "parallel",

  "source": {
    "name": "V1",
    "voltage": 9.0
  },

  "resistors": [
    { "name": "R1", "resistance": 2000.0 },
    { "name": "R2", "resistance": 1000.0 },
    { "name": "RL", "resistance": 1000.0 }
  ],

  "steps": [
    {
      "type": "show_component",
      "target": "V1",
      "text": "Place the DC power supply."
    },
    {
      "type": "show_component",
      "target": "R1",
      "text": "Add resistor R1."
    },
    {
      "type": "show_component",
      "target": "R2",
      "text": "Add resistor R2."
    },
    {
      "type": "show_component",
      "target": "RL",
      "text": "Add load resistor RL."
    },
    {
      "type": "connect",
      "from": "V1.pos",
      "to": "R1.left",
      "text": "Connect supply to R1."
    },
    {
      "type": "connect",
      "from": "R1.right",
      "to": "R2.left",
      "text": "Connect R1 to R2."
    },
    {
      "type": "connect",
      "from": "R2.right",
      "to": "V1.neg",
      "text": "Complete divider."
    },
    {
      "type": "connect",
      "from": "R2.left",
      "to": "RL.left",
      "text": "Connect load in parallel."
    },
    {
      "type": "connect",
      "from": "RL.right",
      "to": "V1.neg",
      "text": "Return load to ground."
    },
    {
      "type": "explain",
      "text": "Load resistor affects divider output voltage."
    }
  ]
}
