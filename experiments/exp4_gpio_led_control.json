{
  "id": 4,
  "name": "LED Control Using Raspberry Pi GPIO",
  "type": "digital",

  "source": {
    "name": "GPIO1",
    "voltage": 3.3
  },

  "resistors": [
    { "name": "R1", "resistance": 330.0 }
  ],

  "leds": [
    { "name": "LED1", "forward_voltage": 2.0, "max_current": 0.02 }
  ],

  "steps": [
    {
      "type": "show_component",
      "target": "GPIO1",
      "text": "Use Raspberry Pi GPIO pin as output (GPIO1)."
    },
    {
      "type": "show_component",
      "target": "R1",
      "text": "Add current limiting resistor R1."
    },
    {
      "type": "show_component",
      "target": "LED1",
      "text": "Add LED (LED1)."
    },
    {
      "type": "connect",
      "from": "GPIO1.pos",
      "to": "R1.left",
      "text": "Connect GPIO output to resistor."
    },
    {
      "type": "connect",
      "from": "R1.right",
      "to": "LED1.anode",
      "text": "Connect resistor to LED."
    },
    {
      "type": "connect",
      "from": "LED1.cathode",
      "to": "GPIO1.neg",
      "text": "Complete the GPIO circuit."
    },
    {
      "type": "explain",
      "text": "LED turns ON/OFF based on GPIO output state."
    }
  ]
}
