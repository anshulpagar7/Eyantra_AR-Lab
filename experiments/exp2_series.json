{
  "id": 2,
  "name": "Series Resistors - Equivalent Resistance",
  "type": "series",

  "source": {
    "name": "V1",
    "voltage": 9.0
  },

  "resistors": [
    {
      "name": "R1",
      "resistance": 1000.0
    },
    {
      "name": "R2",
      "resistance": 2000.0
    }
  ],

  "leds": [],

  "steps": [
    {
      "type": "show_component",
      "target": "V1",
      "text": "Step 1: Place the 9V battery as the source."
    },
    {
      "type": "show_component",
      "target": "R1",
      "text": "Step 2: Add a 1kΩ resistor."
    },
    {
      "type": "show_component",
      "target": "R2",
      "text": "Step 3: Add a 2kΩ resistor in series with R1."
    },
    {
      "type": "connect",
      "from": "V1.pos",
      "to": "R1.left",
      "text": "Connect the battery's positive terminal to R1."
    },
    {
      "type": "connect",
      "from": "R1.right",
      "to": "R2.left",
      "text": "Connect R1 to R2 in series."
    },
    {
      "type": "connect",
      "from": "R2.right",
      "to": "V1.neg",
      "text": "Finally, connect R2 back to the battery negative terminal."
    },
    {
      "type": "explain",
      "text": "Series resistors add up: R_total = R1 + R2 = 3kΩ."
    }
  ]
}
