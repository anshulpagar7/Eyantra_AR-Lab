{
  "id": 6,
  "name": "RC Circuit - Charging and Discharging",
  "type": "rc",

  "source": {
    "name": "V1",
    "voltage": 5.0
  },

  "resistors": [
    {
      "name": "R1",
      "resistance": 1000.0
    }
  ],

  "capacitor": {
    "name": "C1",
    "capacitance": 0.000001
  },

  "steps": [
    {
      "type": "show_component",
      "target": "V1",
      "text": "Step 1: Place the 5V supply."
    },
    {
      "type": "show_component",
      "target": "R1",
      "text": "Step 2: Add a 1kΩ resistor."
    },
    {
      "type": "show_component",
      "target": "C1",
      "text": "Step 3: Add a capacitor (1µF)."
    },
    {
      "type": "connect",
      "from": "V1.pos",
      "to": "R1.left",
      "text": "Connect the supply to the resistor."
    },
    {
      "type": "connect",
      "from": "R1.right",
      "to": "C1.pos",
      "text": "Connect resistor output to capacitor positive plate."
    },
    {
      "type": "connect",
      "from": "C1.neg",
      "to": "V1.neg",
      "text": "Connect capacitor negative back to ground."
    },
    {
      "type": "explain",
      "text": "When switch is ON, the capacitor charges. Voltage rises exponentially with time constant τ = RC."
    },
    {
      "type": "explain",
      "text": "When switch is OFF, the capacitor discharges through the resistor."
    }
  ]
}
