{
  "id": 6,
  "name": "RC Circuit - Charging and Discharging",
  "type": "rc",

  "source": {
    "name": "V1",
    "voltage": 5.0
  },

  "resistors": [
    {
      "name": "R1",
      "resistance": 1000.0
    }
  ],

  "capacitors": [
    {
      "name": "C1",
      "capacitance": 0.000001
    }
  ],

  "steps": [
    {
      "type": "show_component",
      "target": "V1",
      "text": "Step 1: Place the 5V supply (V1)."
    },
    {
      "type": "show_component",
      "target": "R1",
      "text": "Step 2: Add a 1kΩ resistor (R1)."
    },
    {
      "type": "show_component",
      "target": "C1",
      "text": "Step 3: Add a capacitor (C1, 1µF)."
    },
    {
      "type": "connect",
      "from": "V1.pos",
      "to": "R1.left",
      "text": "Connect the supply (V1) to the resistor (R1)."
    },
    {
      "type": "connect",
      "from": "R1.right",
      "to": "C1.pos",
      "text": "Connect resistor output (R1) to capacitor positive plate (C1)."
    },
    {
      "type": "connect",
      "from": "C1.neg",
      "to": "V1.neg",
      "text": "Connect capacitor negative (C1) back to ground (V1)."
    },
    {
      "type": "explain",
      "text": "When the supply is ON, the capacitor charges. Voltage rises exponentially with time constant τ = R × C."
    },
    {
      "type": "explain",
      "text": "When the supply is OFF, the capacitor discharges through the resistor."
    }
  ]
}
