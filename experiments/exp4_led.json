{
  "id": 4,
  "name": "LED with Current-Limiting Resistor",
  "type": "series",

  "source": {
    "name": "V1",
    "voltage": 5.0
  },

  "resistors": [
    {
      "name": "R1",
      "resistance": 220.0
    }
  ],

  "leds": [
    {
      "name": "LED1",
      "forward_voltage": 2.0,
      "max_current": 0.02
    }
  ],

  "steps": [
    {
      "type": "show_component",
      "target": "V1",
      "text": "Step 1: Place the 5V supply (V1)."
    },
    {
      "type": "show_component",
      "target": "LED1",
      "text": "Step 2: Add an LED (LED1). A red LED typically has a 2V forward drop."
    },
    {
      "type": "show_component",
      "target": "R1",
      "text": "Step 3: Add a 220Ω resistor (R1) to limit the current."
    },
    {
      "type": "connect",
      "from": "V1.pos",
      "to": "R1.left",
      "text": "Connect the supply (V1) to the resistor (R1)."
    },
    {
      "type": "connect",
      "from": "R1.right",
      "to": "LED1.anode",
      "text": "Connect resistor (R1) to LED anode (LED1)."
    },
    {
      "type": "connect",
      "from": "LED1.cathode",
      "to": "V1.neg",
      "text": "Connect LED cathode (LED1) back to the supply negative (V1)."
    },
    {
      "type": "explain",
      "text": "The LED lights up! Current = (5V − 2V) / 220Ω ≈ 13.6mA, which is safe."
    }
  ]
}
