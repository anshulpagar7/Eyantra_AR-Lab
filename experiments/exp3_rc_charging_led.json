{
  "id": 3,
  "name": "RC Circuit â€“ Charging and Discharging with LED",
  "type": "rc",

  "source": {
    "name": "V1",
    "voltage": 5.0
  },

  "resistors": [
    { "name": "R1", "resistance": 1000.0 },
    { "name": "RLED", "resistance": 220.0 }
  ],

  "capacitors": [
    { "name": "C1", "capacitance": 0.000001 }
  ],

  "leds": [
    { "name": "LED1", "forward_voltage": 2.0, "max_current": 0.02 }
  ],

  "steps": [
    {
      "type": "show_component",
      "target": "V1",
      "text": "Place the DC power supply (V1)."
    },
    {
      "type": "show_component",
      "target": "R1",
      "text": "Add resistor R1."
    },
    {
      "type": "show_component",
      "target": "C1",
      "text": "Add capacitor C1."
    },
    {
      "type": "show_component",
      "target": "LED1",
      "text": "Add indicator LED (LED1)."
    },
    {
      "type": "show_component",
      "target": "RLED",
      "text": "Add current limiting resistor for LED."
    },
    {
      "type": "connect",
      "from": "V1.pos",
      "to": "R1.left",
      "text": "Connect V1 to R1."
    },
    {
      "type": "connect",
      "from": "R1.right",
      "to": "C1.pos",
      "text": "Connect resistor to capacitor."
    },
    {
      "type": "connect",
      "from": "C1.neg",
      "to": "V1.neg",
      "text": "Connect capacitor back to ground."
    },
    {
      "type": "connect",
      "from": "C1.pos",
      "to": "RLED.left",
      "text": "Connect capacitor to LED resistor."
    },
    {
      "type": "connect",
      "from": "RLED.right",
      "to": "LED1.anode",
      "text": "Connect LED."
    },
    {
      "type": "connect",
      "from": "LED1.cathode",
      "to": "V1.neg",
      "text": "Complete LED return path."
    },
    {
      "type": "explain",
      "text": "LED brightness indicates capacitor charging and discharging."
    }
  ]
}
